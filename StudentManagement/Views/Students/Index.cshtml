@model IEnumerable<StudentManagement.Models.Student>
@{
    ViewData["Title"] = "Students List";
}

<h1 class="mt-4 mb-4">Students List</h1>
<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Course</td>
            </tr>
        }
    </tbody>
</table>